
<h2 class="mycontacts">My Contacts: <span class='number'><%= @contacts.size %></span></h2>
<ul>
  <% @contacts.each do |contact| %>
  <li class="contacts">
    <span class='info'><%= contact.full_name %> (<%= contact.email %>)</span><br>
    <a href="/contacts/<%= contact.id %>/edit" class='edit/delete'>Edit</a> |
    <form class="delete" action="/contacts/<%=contact.id%>" method="post">
        <input type="hidden" name="_method" value="delete">
        <input type="submit" name="delete_button" value="Delete">
    </form>

  </li>
  <% end %>
</ul>
